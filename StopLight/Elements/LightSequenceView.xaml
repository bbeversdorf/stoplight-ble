                </Picker.ItemsSource>
            </Picker>
            <Picker x:Name="Status" HorizontalOptions="FillAndExpand">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>On</x:String>
                        <x:String>Off</x:String>
                        <x:String>Blink</x:String>
                    </x:Array>
